---
import HeaderLink from "./HeaderLink.astro";
---
<article id="/" class="hero responsive background ">
  <section class="center hero_container">
    <section class="flex items-center">
    <img src="logo.svg" alt="Logo" width="200px" height="200px"/>
    <h1 class="hTitle m-10 ">I.O. Forge</h1>
    </section>
    <p class="hText">Software Solutions for Data Analytics and Enterprise Resource Planning</p>
    <HeaderLink href="#contact" class="text-2xl p-5 bg-slate-400 icon shadow-2xl m-10">Contact</HeaderLink>
    
  </section>
  <div></div>
  <div></div>
  <div></div>
  <div></div>
  <div></div>
  
</article>
<style>
  section{
    color:aliceblue;
  }
  .hero_container{
    border-radius:10px;
    
    height:100%;
    width:100%;
    display:flex;
    flex-direction: column;
  }
  .hero{
    /* background-image:url("/iohero.svg"); */
    background-size:cover;
    background-repeat: no-repeat;
    background-position: center;
    
  }
  .icon{
    border-radius:10px;
  }
  .icon:hover{
    --tw-bg-opacity: 1;
  background-color: rgb(71 85 105 / var(--tw-bg-opacity));
  transform:scale(1.2)
  }
  .icon:active{
    --tw-bg-opacity: 1;
  background-color: rgb(51 65 85 / var(--tw-bg-opacity));
  color:cadetblue
  }
  .hTitle{
    font-size: 80px;
    text-align:center;
    width:100%;
  }
  .hText{
    padding:5%;
    text-align:center;
  }
  p{
    font-size:35px;
    color:rgb(235, 233, 233);
    
    padding:2%;
    border-radius:10px;
  }


/* animation for background */
  @keyframes animate {
    0%{
        transform: translateY(0) rotate(0deg);
        opacity: 1;
        border-radius: 20%;
        
    }
    
    100%{
        transform: translateY(-1000px) rotate(720deg);
        opacity: 0;
        border-radius: 50%;
        
    } 
}


/* Animated background */
.background {
    height:auto;
    width:auto;
    top: 0;
    left: 0;

    padding:5%;
    background: #334155;
    overflow: hidden;
}
.background div {
    position: absolute;
    display: block;
    list-style: none;
    width: 20px;
    height: 20px;
    background: rgba(255, 255, 255, 0.2);
    animation: animate 19s linear infinite;
}


/* Animated Background Squares */

.background div:nth-child(0) {
    left: 38%;
    width: 135px;
    height: 135px;
    bottom: -135px;
    animation-delay: 1s;
}
.background div:nth-child(1) {
    left: 43%;
    width: 145px;
    height: 145px;
    bottom: -145px;
    animation-delay: 1s;
}
.background div:nth-child(2) {
    left: 26%;
    width: 150px;
    height: 150px;
    bottom: -150px;
    animation-delay: 8s;
}
.background div:nth-child(3) {
    left: 70%;
    width: 93px;
    height: 93px;
    bottom: -93px;
    animation-delay: 15s;
}
.background div:nth-child(4) {
    left: 60%;
    width: 47px;
    height: 47px;
    bottom: -47px;
    animation-delay: 2s;
}
















  @media(max-width:1000px){
    img{
      width:150px;
      height:150px;
    }
    .hTitle{
      font-size:60px;
    }
    p{
      font-size:25px;
    }
  }


  @media (max-width:700px) {
		img{
      width:100px;
      height:100px;
    }
    .hTitle{
      font-size:40px;
    }
    p{
      font-size:15px;
    }
		
		
	}
  
</style>