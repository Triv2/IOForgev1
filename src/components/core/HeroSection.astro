---
import HeaderLink from "./HeaderLink.astro";
---
<article id="/" class="hero responsive bg-slate-800 ">
  <section class="center text">
    <h1 class="top m-10">I.O. Forge</h1>
    <p>Software Solutions for Enterprise Resource Planning</p>
    <section class="flex">
      <HeaderLink href="#contact" class="text-2xl p-10 bg-slate-400 icon shadow-2xl m-10">Contact</HeaderLink>
    </section>
  </section>
</article>
<style>
  section{
    color:aliceblue;
  }
  .text{
    border-radius:10px;
    background-color: rgba(0, 0, 0, 0.589);
  }
  .hero{
    background-image:url("/iohero.svg");
    background-size:cover;
    background-repeat: no-repeat;
    background-position: center;
    
  }
  .icon{
    border-radius:10px;
  }
  .icon:hover{
    --tw-bg-opacity: 1;
  background-color: rgb(71 85 105 / var(--tw-bg-opacity));
  }
  .icon:active{
    --tw-bg-opacity: 1;
  background-color: rgb(51 65 85 / var(--tw-bg-opacity));
  color:cadetblue
  }
  .top{
    font-size: 80px;
  }
  p{
    font-size:35px;
    color:rgb(235, 233, 233);
    
    padding:2%;
    border-radius:10px;
  }
  @media(max-width:1000px){
    
    .top{
      font-size:60px;
    }
    p{
      font-size:25px;
    }
  }


  @media (max-width:670px) {
		
    .top{
      font-size:40px;
    }
    p{
      font-size:15px;
    }
		
		
	}
  
</style>