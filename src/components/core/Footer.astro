---
import HeaderLink from "../core/HeaderLink.astro";
const today=new Date();
---
<footer class="title center bg-slate-200">
  <span class="logo text-2xl mb-5 "><HeaderLink href="/">I. O. Forge</HeaderLink></span>
  <section class="flex flex-row gap-5 basis-10">
    <article class="flex-auto icon center">
      <HeaderLink  target="_blank"><img src="/githublogo.svg" alt="github"></HeaderLink>
    </article>
    <article class="flex-auto icon center" >
      <HeaderLink target="_blank"><img src="/twitlogo.svg" alt="twitter"></HeaderLink>
    </article>
    <article class="flex-auto icon center">
      <HeaderLink  target="_blank"> <img src="/ytlogo.svg" alt="youtube"></HeaderLink>
    </article>
    <article class="flex-auto icon center">
      <HeaderLink target="_blank"> <img src="/discordlogo.svg" alt="discord"></HeaderLink>
    </article>
    
    </section>
    <p class="p-5">&copy; {today.getFullYear()} I.O. Forge. All rights reserved.</p>

</footer>
<style>
.title{
 height:auto;
}
.icon{
  min-height:30px;
  min-width:30px;
}
.icon:hover{
  transform:scale(1.5);
}
.logo{
		margin:15px;
		display:block;
	}
	.logo:hover{
    transform:scale(1.1);
	color:cadetblue;
	}


</style>