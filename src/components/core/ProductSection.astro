<style>
.product_container{
  height:100%;
  width:100%;
  padding:5%;
  display:flex;
  flex-direction:column;
  gap:75px;
  margin-bottom:0%;
  border-radius:10px;
  
  
}
.list{
 display:flex;
 flex-direction: column;
 color:whitesmoke;
  
}
.list li{
  padding:5px;
  text-align:flex-start;
  padding-left:20px;
}
.products{
  height:auto;
  width:auto;
  padding:5%;
  padding-top:25%;
  padding-bottom:25%;
}

.product {
  background: #c4bfbf;
  padding:5%;
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  gap:5px;
  color: #1a1818;
  max-height:fit-content;
  --tw-drop-shadow: drop-shadow(0 10px 8px rgb(0 0 0 / 0.04)) drop-shadow(0 4px 3px rgb(0 0 0 / 0.1));
  filter: var(--tw-blur) var(--tw-brightness) var(--tw-contrast) var(--tw-grayscale) var(--tw-hue-rotate) var(--tw-invert) var(--tw-saturate) var(--tw-sepia) var(--tw-drop-shadow);
  border-radius:10px;
  width:auto;
}
.title{
  font-size:40px;
    color:rgb(100, 100, 100);
    font-weight:bold;
  border-radius:10px;
  margin-bottom:10%;
}
.pText{
  color:whitesmoke;
}
.text{
  border:1px white solid;
  padding:5px;
  width:80%;
  border-radius:10px;
  --tw-drop-shadow: drop-shadow(0 10px 8px rgb(0 0 0 / 0.04)) drop-shadow(0 4px 3px rgb(0 0 0 / 0.1));
  filter: var(--tw-blur) var(--tw-brightness) var(--tw-contrast) var(--tw-grayscale) var(--tw-hue-rotate) var(--tw-invert) var(--tw-saturate) var(--tw-sepia) var(--tw-drop-shadow);
}
.text *{
  flex-basis:200%;
}
.product_one{
  --tw-drop-shadow: drop-shadow(0 10px 8px rgb(0 0 0 / 0.04)) drop-shadow(0 4px 3px rgb(0 0 0 / 0.1));
  filter: var(--tw-blur) var(--tw-brightness) var(--tw-contrast) var(--tw-grayscale) var(--tw-hue-rotate) var(--tw-invert) var(--tw-saturate) var(--tw-sepia) var(--tw-drop-shadow);
  background-image:url("/ioproduct1.svg");
  background-size:cover;
  background-repeat: no-repeat;
  background-position: center;
  display:flex;
  min-height:150px;
  min-width:150px;
  max-height:fit-content;
  max-width:fit-content;
  border-radius:10px;
  max-width:100%;
  height:auto;
  padding:20%;
}
.pTitle{
  font-weight:bold;
  font-size:25px;
 border-radius:10px;
  text-align: center;
}
.pLabel{
  font-weight:bold;
  --tw-text-opacity: 1;
  color: rgb(37 99 235 / var(--tw-text-opacity));
}
h2{
  --tw-drop-shadow: drop-shadow(0 10px 8px rgb(0 0 0 / 0.04)) drop-shadow(0 4px 3px rgb(0 0 0 / 0.1));
  filter: var(--tw-blur) var(--tw-brightness) var(--tw-contrast) var(--tw-grayscale) var(--tw-hue-rotate) var(--tw-invert) var(--tw-saturate) var(--tw-sepia) var(--tw-drop-shadow);
}
h2,p{
  padding:5px;
  margin-top:5px;
  margin-bottom:5px;
 
}
.bText{
  text-align:center;
  border-radius:10px;
  font-weight:bold;
  font-size:20px;
  
}
.bText:hover{
  
  --tw-bg-opacity: 1;
  background-color: rgb(100 116 139 / var(--tw-bg-opacity));
  transform:scale(1.1);
}
.bText:active{
  color:cadetblue;
  transform:scale(0.9);
}

@media (max-width:700px) {
		.product_container{
      
      width:100%;
    }
    .product{
      width:100%;
      margin:0%;
      flex-direction:column;

    }
    
    .text{
      font-size: 12px;
    }
    
		
	}

  
</style>