---
import HeaderLink from "./HeaderLink.astro";

---

<header class="sticky top-0 z-50 shadow-md" >
	
	<nav>
		<span class="logo text-2xl"><HeaderLink href="/">I. O. Forge</HeaderLink></span>
		
		<div id="navItems" class="navItems">
			<HeaderLink class="shadow-lg" href="#about">About</HeaderLink>
			<HeaderLink class="shadow-lg" href="#feature">Features</HeaderLink>
			<HeaderLink class="shadow-lg" href="#product">Products</HeaderLink>
			<HeaderLink class="shadow-lg" href="#pricing">Pricing</HeaderLink>
			<HeaderLink class="shadow-lg" href="#contact">Contact</HeaderLink>
		</div>
		<div class="menu p-5">
			<!-- "Hamburger menu" / "Bar icon" to toggle the navigation links -->
  	<a id="menuButton"  class="icon" >
    <i class="fa fa-bars"></i>
  </a>
	</div>
	</nav>
</header >

<script src="../../scripts/menu.js"></script>
<style>
	header{
		border-bottom:1px solid white;
	}
	nav{
		display:flex;
		flex-direction: row;
		justify-content:space-between;
		align-items:center;
		
		
		padding-right:10px;
		padding-top:10px;
		padding-bottom:10px;
	
		transition:all 0.2s ease-in-out;	
		--tw-bg-opacity: 1;
  		background-color: rgb(248 250 252 / var(--tw-bg-opacity));
		
	}
	.logo{
		margin:15px;
		display:block;
	}

	.navItems{
		display:flex;
		align-content:flex-end;
		gap:10px;
		flex-wrap:nowrap;
		--tw-bg-opacity: 1;
  		background-color: rgb(248 250 252 / var(--tw-bg-opacity));
		
	}
	.navItems a{
		--tw-bg-opacity: 1;
  		background-color: rgb(248 250 252 / var(--tw-bg-opacity));
		/* border-radius:20px; */
		padding:5px;
		font-family: 'Lato', sans-serif;
		
		flex:1 0 1;
	}
	.navItems a:hover{
		transform:scale(1.2);
		color:orange;
	}
	.navItems a:active{
		--tw-bg-opacity: 1;
  background-color: rgb(100 116 139 / var(--tw-bg-opacity));
	color:aliceblue;
	}

	.menu{
		display:block;
		margin-right:10px;
	}

	.menu:hover{
	
		transform:scale(1.5);
	}

	.menu:active{
			color:white;
	}
	


	@media (max-width:600px) {
		.navItems{
			flex-direction: column;
		}
		
		
	}

</style>
