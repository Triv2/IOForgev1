---
import HeaderLink from "./HeaderLink.astro";

---

<header >
	<script defer src="../../"></script>
	<nav class=" bg-cyan-100">
		<span class="logo text-2xl"><HeaderLink href="/">I. O. Forge</HeaderLink></span>
		<div class="menu">
			<!-- "Hamburger menu" / "Bar icon" to toggle the navigation links -->
  	<a href="javascript:void(0);" class="icon" onclick="menu()">
    <i class="fa fa-bars"></i>
  </a>
		</div>
		<div class="navItems">
			<HeaderLink class="shadow-lg" href="#about">About</HeaderLink>
			<HeaderLink class="shadow-lg" href="#feature">Features</HeaderLink>
			<HeaderLink class="shadow-lg" href="#product">Products</HeaderLink>
			<HeaderLink class="shadow-lg" href="#pricing">Pricing</HeaderLink>
			<HeaderLink class="shadow-lg" href="#contact">Contact</HeaderLink>
		</div>
	</nav>
</header >
<style>
	nav{
		display:flex;
		justify-content:space-between;
	
		align-items:center;
		

		padding-right:10px;
		padding-top:10px;
		padding-bottom:10px;
	
		transition:all 0.2s ease-in-out;	
		position:relative;
		
	}
	.logo{
		margin:15px;
		display:block;
	
	}
	.navItems{
		display:flex;
		align-content:flex-end;
		gap:10px;
		visibility:visible;
	}
	.navItems a{
		--tw-bg-opacity: 1;
  		background-color: rgb(248 250 252 / var(--tw-bg-opacity));
		border-radius:20px;
		padding:5px;
		font-family: 'Lato', sans-serif;
		position:relative;
		flex:1 0 auto;
	}
	.navItems a:hover{
		transform:scale(1.2);
	}
	.navItems a:active{
		--tw-bg-opacity: 1;
  background-color: rgb(100 116 139 / var(--tw-bg-opacity));
	color:aliceblue;
	}

	.menu{
		display: none;
		margin-right:10px;
	}

	.menu:hover{
	
		transform:scale(1.5);
	}

	.menu:active{
		
		color:white;
	}


	@media screen and (max-width:540px) {
		.navItems{
			display:none;
		}
		.menu{
			display:block;
			
		}
 
	}
</style>
